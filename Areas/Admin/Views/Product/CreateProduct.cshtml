@model CreateProductDto

@{
    ViewData["Title"] = "CreateProduct";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Ürün İşlemleri</h3>
                <p class="text-subtitle text-muted">Bu sayfadan sisteme yeni bir ürün ekleme işlemini gerçekleştirebilirsiniz.</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Admin Paneli</a></li>
                        <li class="breadcrumb-item"><a href="#">Ürün İşlemleri</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Yeni Ürün Ekle</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section>
        <div class="card">
            <div class="card-header" style="padding-bottom:0">
                <h4 class="card-title">Yeni Ürün Ekle</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <form method="post" class="form form-vertical">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Ürün Kategorisi</label>
                                        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control">
                                            <option value="">Bir Kategori Seçin</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Ürün Adı</label>
                                        <input asp-for="ProductName" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Birim Tipi</label>
                                        <input asp-for="UnitType" type="text" placeholder="Adet, Kilogram veya Litre gibi..." class="form-control" />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Birim Fiyatı</label>
                                        <input asp-for="Price" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Ürün Görseli</label>
                                        <input asp-for="ProductImageURL" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit"
                                            class="btn btn-primary me-1 mb-1">
                                        Oluştur
                                    </button>
                                    <button type="reset"
                                            class="btn btn-light-secondary me-1 mb-1">
                                        Vazgeç
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>