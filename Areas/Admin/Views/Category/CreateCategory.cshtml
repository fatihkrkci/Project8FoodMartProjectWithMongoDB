@model CreateCategoryDto

@{
    ViewData["Title"] = "CreateCategory";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<header class="mb-3">
    <a href="#" class="burger-btn d-block d-xl-none">
        <i class="bi bi-justify fs-3"></i>
    </a>
</header>

<div class="page-heading">
    <div class="page-title">
        <div class="row">
            <div class="col-12 col-md-6 order-md-1 order-last">
                <h3>Kategori İşlemleri</h3>
                <p class="text-subtitle text-muted">Bu sayfadan sisteme yeni bir kategori ekleyebilirsiniz.</p>
            </div>
            <div class="col-12 col-md-6 order-md-2 order-first">
                <nav aria-label="breadcrumb" class="breadcrumb-header float-start float-lg-end">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="#">Admin Paneli</a></li>
                        <li class="breadcrumb-item"><a href="#">Kategori İşlemleri</a></li>
                        <li class="breadcrumb-item active" aria-current="page">Yeni Kategori Ekle</li>
                    </ol>
                </nav>
            </div>
        </div>
    </div>
    <section>
        <div class="card">
            <div class="card-header" style="padding-bottom:0">
                <h4 class="card-title">Yeni Kategori Ekle</h4>
            </div>
            <div class="card-content">
                <div class="card-body">
                    <form method="post" class="form form-vertical">
                        <div class="form-body">
                            <div class="row">
                                <div class="col-12">
                                    <div class="form-group">
                                        <label>Kategori Adı</label>
                                        <input asp-for="CategoryName" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group has-icon-left">
                                        <label>Kategori İkonu</label>
                                        <input asp-for="CategoryIconURL" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group has-icon-left">
                                        <label>Kategori Görseli</label>
                                        <input asp-for="CategoryImageURL" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-12">
                                    <div class="form-group has-icon-left">
                                        <label>Kategori Linki</label>
                                        <input asp-for="CategoryURL" type="text" class="form-control" />
                                    </div>
                                </div>
                                <div class="col-12 d-flex justify-content-end">
                                    <button type="submit"
                                            class="btn btn-primary me-1 mb-1">
                                        Oluştur
                                    </button>
                                    <button type="reset"
                                            class="btn btn-light-secondary me-1 mb-1">
                                        Vazgeç
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</div>